---
layout: layout.njk
---
<article class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <header class="text-center mb-12">
        <p class="text-sm font-bold text-blue-600 uppercase tracking-wide">{{ section }}</p>
        <h1 class="mt-2 text-4xl md:text-5xl font-bold leading-tight text-gray-900 dark:text-white">{{ title }}</h1>
        <div class="mt-6 text-sm">
            <span class="font-semibold">By {{ author }}</span>
            <span class="text-gray-500 mx-2">â€¢</span>
            <time class="text-gray-500">{{ date | date: "long" }}</time>
        </div>
    </header>

    <img src="{{ image }}" alt="{{ title }}" class="w-full h-auto object-cover mb-12">
    
    <div class="prose dark:prose-invert max-w-none mx-auto text-lg">
        {{ content | safe }}
    </div>
</article>
